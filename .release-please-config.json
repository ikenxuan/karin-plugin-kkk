{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "node",
  "include-component-in-tag": false,
  "tag-separator": "-",
  "separate-pull-requests": false,
  "plugins": [
    "linked-versions"
  ],
  "packages": {
    "packages/core": {
      "package-name": "karin-plugin-kkk",
      "component": "packages/core",
      "release-type": "node",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        "packages/core/package.json"
      ]
    },
    "packages/web": {
      "package-name": "web",
      "component": "packages/web",
      "release-type": "node",
      "skip-github-release": true,
      "skip-tag": true,
      "changelog": false,
      "extra-files": [
        "packages/web/package.json"
      ]
    },
    "packages/template": {
      "package-name": "template",
      "component": "packages/template",
      "release-type": "node",
      "skip-github-release": true,
      "skip-tag": true,
      "changelog": false,
      "extra-files": [
        "packages/template/package.json"
      ]
    }
  },
  "changelog-sections": [
    {
      "type": "feat",
      "section": "✨ 新功能"
    },
    {
      "type": "fix",
      "section": "🐛 错误修复"
    },
    {
      "type": "perf",
      "section": "⚡️ 性能优化"
    },
    {
      "type": "revert",
      "section": "⏪️ 回退提交"
    },
    {
      "type": "docs",
      "section": "📝 文档更新"
    },
    {
      "type": "style",
      "section": "🎨 代码样式"
    },
    {
      "type": "chore",
      "section": "🔧 其他更新"
    },
    {
      "type": "refactor",
      "section": "♻️ 代码重构"
    },
    {
      "type": "test",
      "section": "✅ 测试相关"
    },
    {
      "type": "deps",
      "section": "📦 依赖更新"
    },
    {
      "type": "build",
      "section": "📦️ 构建系统"
    },
    {
      "type": "ci",
      "section": "🎡 持续集成"
    }
  ]
}